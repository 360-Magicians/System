    "/ai-workflow": {
      "post": {
        "summary": "Design AI-powered development workflow",
        "description": "Creates workflow where AI handles 90% of development tasks",
        "operationId": "designAIWorkflow",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["project_type", "team_size"],
                "properties": {
                  "project_type": {
                    "type": "string",
                    "description": "Type of project"
                  },
                  "team_size": {
                    "type": "string",
                    "enum": ["solo", "small_team", "medium_team", "large_team"]
                  },
                  "automation_level": {
                    "type": "string",
                    "enum": ["conservative", "balanced", "aggressive"],
